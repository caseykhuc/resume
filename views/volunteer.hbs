{{#if resume.volunteer.length}}
<section id="volunteer">
    <h2>Projects</h2>
    {{#each resume.volunteer}}
        {{#> work-item subtitle=organization title=position location=location startDate=startDate endDate=endDate }}
        {{#if summary}}
        <div class="summary">
            <p>{{summary}}</p>
        </div>
        {{/if}}

        {{#if highlights.length}}
        <ul class="highlights">
            {{#each highlights}}
            <li>{{.}}</li>
            {{/each}}
        </ul>
        {{/if}}
        {{/work-item}}
    {{/each}}
</section>
{{/if}}
